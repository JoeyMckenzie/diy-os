{
    "name": "joeymckenzie/diy-os",
    "type": "project",
    "description": "The OS for solo builders and DIY'ers.",
    "keywords": ["construction", "diy"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "hashids/hashids": "^5.0",
        "inertiajs/inertia-laravel": "^1.0",
        "jenssegers/optimus": "^1.1",
        "laravel/framework": "^v11.10.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.9",
        "tightenco/ziggy": "^2.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^2.9",
        "laravel/breeze": "^2.0",
        "laravel/pint": "^1.16",
        "laravel/sail": "^1.29",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "pestphp/pest": "^2.3",
        "pestphp/pest-plugin-laravel": "^2.4",
        "pestphp/pest-plugin-type-coverage": "^2.8",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^1.11",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6",
        "rector/rector": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "test:integration": "./vendor/bin/pest --colors=always",
        "test:watch": "./vendor/bin/pest --watch --parallel",
        "test:types": "./vendor/bin/pest --type-coverage --min=100",
        "test": ["@test:types", "@test:integration"],
        "lint": "./vendor/bin/phpstan analyze",
        "fmt": "./vendor/bin/pint -vv",
        "rector": "vendor/bin/rector process",
        "rector:cache": "php vendor/bin/rector process --dry-run --config=rector.php",
        "check": ["@lint", "@fmt", "@test"],
        "check:test": ["@check", "@test:integration"]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
