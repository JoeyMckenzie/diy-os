{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build && vite build --ssr",
        "fmt": "pnpm biome format --write ./resources/js",
        "lint": "pnpm biome lint --apply ./resources/js",
        "fix": "pnpm biome lint --apply-unsafe ./resources/js",
        "check": "pnpm biome check --apply ./resources/js",
        "ci": "pnpm run lint && pnpm run build",
        "test": "vitest"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": ["pnpm run fmt", "pnpm run lint"],
        "**/*.php": ["composer run fmt", "composer run rector"]
    },
    "devDependencies": {
        "@biomejs/biome": "1.7.3",
        "@inertiajs/react": "^1.2.0",
        "@tailwindcss/forms": "^0.5.7",
        "@types/node": "^18.19.42",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.19",
        "axios": "^1.7.2",
        "laravel-vite-plugin": "^1.0.5",
        "lint-staged": "^15.2.7",
        "postcss": "^8.4.40",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.7",
        "typescript": "^5.5.4",
        "vite": "^5.3.5",
        "vitest": "^2.0.4"
    },
    "dependencies": {
        "@headlessui/react": "^2.1.2",
        "@heroicons/react": "^2.1.5",
        "clsx": "^2.1.1",
        "date-fns": "^3.6.0",
        "framer-motion": "^11.3.19"
    }
}
